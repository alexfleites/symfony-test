{% extends 'base.html.twig' %}

{% block title %}Sales Report Page!{% endblock %}

{% block body %}
<div class="container my-10">
    <h1>Sales Report Page!</h1>
    <div class="row">
        {% include 'menu.html.twig' %}
        <div class="col-xs-10 col-md-10 col-lg-10">
			{% for message in app.flashes('error') %}
				<div class="alert alert-danger">
					{{ message }}
				</div>
			{% endfor %}
            <div class="row">
				<form method="post" action="{{ path('new_sale') }}">
					<div class="form-group">
						<label for="product">Product</label>
						<select class="form-control" name="product" id="product">
						<option value="" selected>- select product -</option>
						{% for product in products %}
						<option {{ product.id == product_id ? 'selected' : '' }} value="{{  product.id }}">{{ product.productname }}</option>
						{% endfor %}
						</select>
					</div>
					<div class="form-group">
						<label for="amount">Amount</label>
						<input type="number" max="100" class="form-control" name="amount" id="amount">
					</div>
					<div class="form-group">
						<button class="btn btn-primary btn-lg">MAKE SALE</button>
					</div>
				</form>
			<div>
        </div>    
    </div> 
</div>
{% endblock %}
